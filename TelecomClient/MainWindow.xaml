<Window x:Class="TelecomClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Абоненты" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Таблица -->
        <DataGrid x:Name="AbonentsGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Grid.Row="0"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="Абон. плата" Binding="{Binding MonthlyFee}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" >
            <Button Content="Обновить список" Width="150" Click="Refresh_Click"/>
            <Button Content="Добавить" Width="100" Click="Add_Click"/>
            <Button Content="Изменить" Width="100" Click="Update_Click"/>
            <Button Content="Удалить" Width="100" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>

